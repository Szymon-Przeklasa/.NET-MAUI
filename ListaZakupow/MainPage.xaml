<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">

    <Grid HorizontalOptions="Center" RowDefinitions="*,*,*,*,*" ColumnDefinitions="*,*,*" WidthRequest="300" HeightRequest="700" VerticalOptions="Start">
        <Label Text="ShoppingList" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" HorizontalTextAlignment="Center" FontSize="22"></Label>
        <Entry x:Name="additem" WidthRequest="170" HeightRequest="50" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Background="LightGray" TextColor="White"></Entry>
        <Button Clicked="AddBtn_Clicked" Text="Add" WidthRequest="90" HeightRequest="50" Grid.Column="2" Grid.Row="1" FontSize="18" BorderColor="Black"></Button>
        <CollectionView Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" Grid.RowSpan="2" Background="LightGray" x:Name="collectionview" ItemsSource="{Binding Products}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Spacing="5">
                        <Label Text="{Binding Name}"></Label>
                        <Label Text="{Binding Quantity}"></Label>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Clicked="DelBtn_Clicked" Text="Delete" WidthRequest="90" HeightRequest="50" Grid.Column="2" Grid.Row="4" FontSize="18" BorderColor="Black"></Button>
    </Grid>

</ContentPage>
