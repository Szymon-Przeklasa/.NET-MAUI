<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">

    <Grid HorizontalOptions="Center" RowDefinitions="*,*,*,*,*" ColumnDefinitions="*,*,*" WidthRequest="300" HeightRequest="700" VerticalOptions="Start">
        <Label Text="ShoppingList" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" HorizontalTextAlignment="Center" FontSize="22"></Label>
        <Entry x:Name="additem" WidthRequest="170" HeightRequest="50" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Background="RoyalBlue" TextColor="White"></Entry>
        <Button Clicked="AddBtn_Clicked" Text="Add" WidthRequest="80" HeightRequest="50" Grid.Column="2" Grid.Row="1" FontSize="18"></Button>
        <CollectionView Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" Grid.RowSpan="2" Background="RoyalBlue" x:Name="listview">
            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    
                </x:Array>
            </CollectionView.ItemsSource>
        </CollectionView>
        <Button Clicked="DelBtn_Clicked" Text="Delete" WidthRequest="100" HeightRequest="50" Grid.Column="2" Grid.Row="4" FontSize="18"></Button>
    </Grid>

</ContentPage>
